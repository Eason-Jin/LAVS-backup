<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="648.0" prefWidth="1152.0" stylesheets="@../css/primer-light.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uoa.lavs.controllers.LoanDetailsController">
   <children>
      <Label fx:id="titleLabel" layoutX="80.0" layoutY="65.0" prefHeight="64.0" prefWidth="1000.0" text="Loan Details for Loan ID: ID">
         <font>
            <Font name="Calibri Bold" size="56.0" />
         </font>
      </Label>
      <Button fx:id="homeButton" layoutX="20.0" layoutY="14.0" mnemonicParsing="false" onAction="#onClickHome" prefHeight="50.0" prefWidth="50.0" stylesheets="@../css/primer-light.css">
         <styleClass>
            <String fx:value="button-circle" />
            <String fx:value="home" />
         </styleClass>
      </Button>
      <Button fx:id="backButton" layoutX="1082.0" layoutY="20.0" mnemonicParsing="false" onAction="#onClickBack" prefHeight="50.0" prefWidth="50.0" stylesheets="@../css/primer-light.css">
         <styleClass>
            <String fx:value="button-circle" />
            <String fx:value="danger" />
            <String fx:value="cross" />
         </styleClass>
      </Button>
      <TabPane fx:id="detailsTabPane" layoutX="76.0" layoutY="130.0" prefHeight="518.0" prefWidth="1000.0" tabClosingPolicy="UNAVAILABLE">
         <tabs>
            <Tab fx:id="generalDetailsTab" text="Loan Details">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="1000.0">
                     <children>
                        <Pane fx:id="loanDetailsPane" disable="true" layoutX="25.0" layoutY="55.0" prefHeight="203.0" prefWidth="950.0">
                           <children>
                              <TextField fx:id="principalField" prefHeight="36.0" prefWidth="310.0" promptText="Principal" stylesheets="@../css/primer-light.css" />
                              <TextField fx:id="rateTypeField" layoutX="320.0" prefHeight="35.0" prefWidth="310.0" promptText="Rate type" />
                              <TextField fx:id="rateValueField" layoutX="640.0" prefHeight="36.0" prefWidth="310.0" promptText="Rate" stylesheets="@../css/primer-light.css" />
                              <TextField fx:id="startDateField" layoutY="50.0" prefHeight="36.0" prefWidth="310.0" promptText="Start date" />
                              <TextField fx:id="periodField" layoutX="320.0" layoutY="50.0" prefHeight="36.0" prefWidth="310.0" promptText="Period" stylesheets="@../css/primer-light.css" />
                              <TextField fx:id="loanTermField" layoutX="640.0" layoutY="50.0" prefHeight="35.0" prefWidth="310.0" promptText="Loan term" stylesheets="@../css/primer-light.css" />
                              <TextField fx:id="compoundingField" layoutY="100.0" prefHeight="35.0" prefWidth="310.0" promptText="Compounding" />
                              <TextField fx:id="paymentFrequencyField" layoutX="320.0" layoutY="100.0" prefHeight="36.0" prefWidth="310.0" promptText="Payment frequency" />
                              <TextField fx:id="paymentAmountField" layoutX="640.0" layoutY="100.0" prefHeight="35.0" prefWidth="310.0" promptText="Payment amount" stylesheets="@../css/primer-light.css" />
                              <TextField fx:id="totalInterestField" layoutY="150.0" prefHeight="36.0" prefWidth="310.0" promptText="Total Interest" />
                              <TextField fx:id="totalCostField" layoutX="320.0" layoutY="150.0" prefHeight="36.0" prefWidth="310.0" promptText="Total cost" />
                              <TextField fx:id="payoffDateField" layoutX="640.0" layoutY="150.0" prefHeight="36.0" prefWidth="310.0" promptText="Payoff date" />
                           </children>
                           <stylesheets>
                              <URL value="@../css/application.css" />
                              <URL value="@../css/primer-light.css" />
                           </stylesheets>
                        </Pane>
                        <Label alignment="TOP_LEFT" contentDisplay="TOP" layoutX="15.0" layoutY="15.0" text="Loan Details">
                           <font>
                              <Font name="Calibri" size="30.0" />
                           </font>
                        </Label>
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
            <Tab fx:id="addressTab" text="Co-borrowers">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="176.0" prefWidth="1000.0">
                     <children>
                        <Label layoutX="15.0" layoutY="15.0" text="Co-borrowers">
                           <font>
                              <Font name="Calibri" size="30.0" />
                           </font>
                        </Label>
                        <TableView fx:id="coBorrowersTable" fixedCellSize="50.0" layoutX="15.0" layoutY="55.0" maxHeight="400.0" maxWidth="950.0" minHeight="400.0" minWidth="950.0">
                           <columns>
                              <TableColumn fx:id="coBorrowerNameColumn" editable="false" maxWidth="475.0" minWidth="475.0" prefWidth="-1.0" resizable="false" sortable="false" text="Co-borrower Name" />
                              <TableColumn fx:id="coBorrowerIdColumn" maxWidth="475.0" minWidth="475.0" prefWidth="75.0" resizable="false" sortable="false" text="Co-borrower ID" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
            <Tab text="Repayments">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Label layoutX="15.0" layoutY="15.0" text="Repayments">
                           <font>
                              <Font name="Calibri" size="30.0" />
                           </font>
                        </Label>
                        <TableView fx:id="repaymentsTable" fixedCellSize="50.0" layoutX="15.0" layoutY="55.0" maxHeight="400.0" maxWidth="950.0" minHeight="400.0" minWidth="950.0">
                           <columns>
                              <TableColumn fx:id="repaymentDateColumn" editable="false" maxWidth="237.5" minWidth="237.5" prefWidth="-1.0" resizable="false" sortable="false" text="Repayment Date" />
                              <TableColumn fx:id="principalColumn" maxWidth="237.5" minWidth="237.5" prefWidth="75.0" resizable="false" sortable="false" text="Principal" />
                              <TableColumn fx:id="interestColumn" maxWidth="237.5" minWidth="237.5" prefWidth="75.0" resizable="false" text="Interest" />
                              <TableColumn fx:id="remainingColumn" editable="false" maxWidth="237.5" minWidth="237.5" prefWidth="-1.0" resizable="false" text="Remaining" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
         </tabs>
      </TabPane>
   </children>
</AnchorPane>
